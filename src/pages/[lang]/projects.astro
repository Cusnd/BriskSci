---
import MainLayout from "../../layouts/MainLayout.astro";
import { Github, ExternalLink } from "lucide-react";
import { languages } from "../../i18n/ui";

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;

const projects = [
    {
        title: "Nijigen Blog",
        description:
            "A minimalist, high-performance blog theme built with Astro and React. Designed for ACGN enthusiasts.",
        tags: ["Astro", "React", "Tailwind"],
        link: "#",
        github: "#",
        color: "bg-sakura-light/30",
    },
    {
        title: "Sakura UI",
        description:
            "A React component library inspired by Japanese aesthetics. Soft colors, glassmorphism, and smooth animations.",
        tags: ["React", "Storybook", "Framer Motion"],
        link: "#",
        github: "#",
        color: "bg-blue-100/50",
    },
    {
        title: "AniTracker",
        description:
            "An automated anime tracking tool that syncs with MyAnimeList and AniList.",
        tags: ["Python", "API", "Automation"],
        link: "#",
        github: "#",
        color: "bg-purple-100/50",
    },
];
---

<MainLayout title="Projects | Soren">
    <section class="max-w-6xl mx-auto">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-serif font-bold text-slate-800 mb-4">
                Projects
            </h1>
            <p class="text-slate-500 max-w-lg mx-auto">
                A collection of things I've built.
            </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                projects.map((project) => (
                    <div class="glass p-8 rounded-3xl flex flex-col h-full group">
                        <div
                            class={`w-12 h-12 rounded-2xl ${project.color} flex items-center justify-center text-xl mb-6`}
                        >
                            âœ¨
                        </div>

                        <h3 class="text-xl font-bold text-slate-800 mb-3 group-hover:text-sakura-dark transition-colors">
                            {project.title}
                        </h3>

                        <p class="text-slate-600 text-sm leading-relaxed mb-6 flex-1">
                            {project.description}
                        </p>

                        <div class="flex flex-wrap gap-2 mb-6">
                            {project.tags.map((tag) => (
                                <span class="text-xs font-medium px-2 py-1 rounded bg-slate-100 text-slate-600">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <div class="flex gap-4 pt-4 border-t border-slate-100/50">
                            <a
                                href={project.github}
                                class="flex items-center gap-1 text-sm text-slate-500 hover:text-sakura-dark transition-colors"
                            >
                                <Github size={16} />{" "}
                                <span class="font-serif">Code</span>
                            </a>
                            <a
                                href={project.link}
                                class="flex items-center gap-1 text-sm text-slate-500 hover:text-sakura-dark transition-colors"
                            >
                                <ExternalLink size={16} />{" "}
                                <span class="font-serif">Demo</span>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>
</MainLayout>
