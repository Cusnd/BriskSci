---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import MainLayout from "../../../layouts/MainLayout.astro";
import { formatDate } from "../../../utils/date";
import Comments from "../../../components/Comments";
import { languages } from "../../../i18n/ui";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return Object.keys(languages).flatMap((lang) =>
        posts.map((post) => ({
            params: { lang, slug: post.id },
            props: post,
        })),
    );
}

type Props = CollectionEntry<"blog">;

const post = Astro.props as Props;
const { Content, headings } = await render(post);
---

<MainLayout
    title={post.data.title}
    description={post.data.description}
    image={post.data.heroImage}
>
    <div class="max-w-4xl mx-auto">
        <!-- Article Header -->
        <header class="mb-12 text-center">
            <!-- Tags -->
            <div class="mb-4 flex justify-center gap-2">
                {
                    post.data.tags?.map((tag: string) => (
                        <span class="px-3 py-1 text-xs font-medium text-sakura-dark bg-sakura-light/30 rounded-full">
                            {tag}
                        </span>
                    ))
                }
            </div>

            <!-- Title -->
            <h1
                class="text-3xl md:text-5xl font-serif font-bold text-slate-800 mb-6 leading-tight"
            >
                {post.data.title}
            </h1>

            <!-- Meta -->
            <div
                class="flex items-center justify-center gap-4 text-slate-500 text-sm"
            >
                <time class="font-serif">{formatDate(post.data.pubDate)}</time>
                {
                    post.data.updatedDate && (
                        <span class="italic text-slate-400">
                            Updated: {formatDate(post.data.updatedDate)}
                        </span>
                    )
                }
            </div>

            <!-- Hero Image -->
            {
                post.data.heroImage && (
                    <div class="mt-10 rounded-2xl overflow-hidden">
                        <img
                            src={post.data.heroImage}
                            alt=""
                            class="w-full object-cover max-h-[480px]"
                        />
                    </div>
                )
            }
        </header>

        <!-- Article Content - Clean, no card -->
        <article class="article-content">
            <Content />
        </article>

        <!-- Comments -->
        <div class="mt-16 pt-12 border-t border-slate-200">
            <Comments client:visible />
        </div>
    </div>

    <!-- Floating TOC for desktop -->
    {
        headings.length > 0 && (
            <aside class="hidden xl:block fixed right-8 top-32 w-56">
                <div class="text-xs uppercase tracking-wider text-slate-400 font-medium mb-3">
                    On this page
                </div>
                <nav class="space-y-1">
                    {headings
                        .filter((h) => h.depth <= 3)
                        .map((heading) => (
                            <a
                                href={`#${heading.slug}`}
                                class:list={[
                                    "block py-1 text-sm text-slate-500 hover:text-sakura-dark transition-colors truncate",
                                    { "pl-3": heading.depth === 2 },
                                    { "pl-6 text-xs": heading.depth === 3 },
                                ]}
                            >
                                {heading.text}
                            </a>
                        ))}
                </nav>
            </aside>
        )
    }
</MainLayout>

<style is:global>
    /* Beautiful article typography - using plain CSS */
    .article-content {
        color: #475569;
        line-height: 1.8;
    }

    .article-content h1,
    .article-content h2,
    .article-content h3,
    .article-content h4 {
        font-family: "Noto Serif JP", serif;
        font-weight: 700;
        color: #1e293b;
        margin-top: 3rem;
        margin-bottom: 1rem;
    }

    .article-content h1 {
        font-size: 1.875rem;
    }

    .article-content h2 {
        font-size: 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        padding-bottom: 0.75rem;
    }

    .article-content h3 {
        font-size: 1.25rem;
    }

    .article-content h4 {
        font-size: 1.125rem;
        color: #475569;
    }

    .article-content p {
        margin: 1.25rem 0;
        font-size: 1rem;
        line-height: 2;
    }

    .article-content a {
        color: #f87171;
        text-decoration: none;
    }

    .article-content a:hover {
        text-decoration: underline;
        text-underline-offset: 2px;
    }

    .article-content strong {
        font-weight: 700;
        color: #1e293b;
    }

    .article-content em {
        font-style: italic;
    }

    .article-content ul,
    .article-content ol {
        margin: 1.25rem 0;
        padding-left: 1.5rem;
    }

    .article-content ul {
        list-style-type: disc;
    }

    .article-content ol {
        list-style-type: decimal;
    }

    .article-content li {
        margin: 0.5rem 0;
        line-height: 1.75;
    }

    .article-content blockquote {
        margin: 1.5rem 0;
        padding: 1rem 1.5rem;
        border-left: 4px solid #f87171;
        background: rgba(254, 226, 226, 0.1);
        font-style: italic;
        color: #64748b;
        border-radius: 0 0.5rem 0.5rem 0;
    }

    .article-content code {
        padding: 0.125rem 0.375rem;
        background: #f1f5f9;
        color: #f87171;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        font-family: "Fira Code", monospace;
    }

    .article-content pre {
        margin: 1.5rem 0;
        padding: 1.25rem;
        background: #0f172a;
        color: #e2e8f0;
        border-radius: 0.75rem;
        overflow-x: auto;
        font-size: 0.875rem;
        line-height: 1.6;
    }

    .article-content pre code {
        background: transparent;
        color: inherit;
        padding: 0;
    }

    .article-content img {
        margin: 2rem auto;
        border-radius: 0.75rem;
        max-width: 100%;
    }

    .article-content hr {
        margin: 3rem 0;
        border: 0;
        height: 1px;
        background: linear-gradient(
            to right,
            transparent,
            #e2e8f0,
            transparent
        );
    }

    .article-content table {
        margin: 1.5rem 0;
        width: 100%;
        font-size: 0.875rem;
        border-collapse: collapse;
    }

    .article-content th {
        text-align: left;
        font-weight: 700;
        color: #1e293b;
        padding: 0.5rem 0.75rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .article-content td {
        padding: 0.5rem 0.75rem;
        border-bottom: 1px solid #f1f5f9;
    }
</style>
