---

<MainLayout title="Moods | Soren">
    <section class="max-w-2xl mx-auto">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-serif font-bold text-slate-800 mb-4">
                Moods
            </h1>
            <p class="text-slate-500 max-w-lg mx-auto">
                Fleeting thoughts and moments.
            </p>
        </header>

        <div class="relative space-y-12">
            {/* Vertical Line */}
            <div class="absolute left-4 top-0 bottom-0 w-px bg-slate-200"></div>

            {
                moods.map((item) => (
                    <div class="relative pl-12">
                        {/* Dot */}
                        <div class="absolute left-0 top-1 w-8 h-8 rounded-full bg-white border border-slate-200 flex items-center justify-center text-sm shadow-sm z-10">
                            {item.mood}
                        </div>

                        <div class="glass p-6 rounded-2xl rounded-tl-sm relative">
                            {/* Triangle */}
                            <div class="absolute top-4 -left-2 w-4 h-4 bg-white/70 backdrop-blur-xl rotate-45 border-l border-b border-white/40" />

                            <div class="text-xs font-serif text-sakura-dark font-bold mb-2">
                                {new Date(item.date).toLocaleDateString()}
                            </div>
                            <p class="text-slate-700 leading-relaxed">
                                {item.content}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>
</MainLayout>
